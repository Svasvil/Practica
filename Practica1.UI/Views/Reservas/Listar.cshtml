@model IEnumerable<Practica1.Abstracciones.ModelosUI.Habitaciones.HabitacionDTO>

@{
    ViewBag.Title = "Lista_de_Habitaciones";
}

<h2>Lista_de_Habitaciones</h2>

<p>
    @Html.ActionLink("Create New", "Crear_Habitacion")
</p>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-warning">
        @TempData["Mensaje"]
    </div>
}

<hr />

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Codigo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ubicacion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CantidadHuespedesAdmitidos)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CantidadCamas)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CantidadBanos)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ResponsableLimpieza)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CostoLimpieza)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CostoReserva)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TipoHabitacion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estado)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaRegistro)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaModificacion)
                </th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>

            <li>@Html.ActionLink("Nueva Reserva.", "ListaReservasHabitacion", "Reservas", new { area = "" }, new { @class = "nav-link" })</li>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Codigo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ubicacion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CantidadHuespedesAdmitidos)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CantidadCamas)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CantidadBanos)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ResponsableLimpieza)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CostoLimpieza)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CostoReserva)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoHabitacion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Estado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaRegistro)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaModificacion)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Editar_Habitacion", new { id = item.ID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
  
}